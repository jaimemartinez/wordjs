{
    "id": "video-gallery",
    "name": "Video Gallery",
    "version": "1.0.0",
    "description": "Manage and display YouTube video carousels",
    "author": "WordJS",
    "backend": {
        "entry": "index.js"
    },
    "frontend": {
        "components": [
            {
                "name": "VideoCarousel",
                "entry": "client/components/VideoCarousel.tsx",
                "locations": [
                    "videos"
                ],
                "props": {}
            }
        ],
        "adminPage": {
            "entry": "client/admin/page.tsx",
            "slug": "videos"
        },
        "puckComponents": null
    },
    "api": {
        "baseUrl": "/api/v1/videos",
        "endpoints": [
            "list",
            "get",
            "create",
            "update",
            "delete"
        ]
    },
    "shortcodes": [
        {
            "tag": "videos",
            "requiredAttrs": []
        }
    ],
    "adminMenu": {
        "label": "Videos",
        "icon": "fa-video",
        "href": "/admin/plugin/videos",
        "order": 60
    },
    "permissions": [
        {
            "scope": "settings",
            "access": "read",
            "reason": "Required to read video gallery configurations and legacy data."
        },
        {
            "scope": "settings",
            "access": "write",
            "reason": "Required to manage video galleries and perform data migration."
        },
        {
            "scope": "database",
            "access": "write",
            "reason": "Required to manage video gallery content and settings."
        }
    ],
    "dependencies": {
        "uuid": "^10.0.0"
    }
}