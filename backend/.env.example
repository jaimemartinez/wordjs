# WordJS Environment Configuration
# Copy this file to .env and configure your settings

# Server
PORT=3000
HOST=localhost
NODE_ENV=development

# Database
DB_PATH=./data/wordjs.db

# JWT Authentication
JWT_SECRET=change-this-to-a-secure-random-string
JWT_EXPIRES_IN=7d

# Site Settings
SITE_URL=http://localhost:3000
SITE_NAME=WordJS
SITE_DESCRIPTION=A WordPress-like CMS built with Node.js

# Uploads
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
